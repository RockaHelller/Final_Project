@model TopicCreateVM

<div class="container my-5">
    <div class="row">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <input asp-for="Name" class="form-control mt-3" placeholder="Enter Resolution Size" />
            <span asp-validation-for="Name" class="text-danger d-block"></span>

            <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3 d-inline-block">Submit</button>
            <a asp-controller="Tag" asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3 d-inline-block">Back</a>
        </form>
    </div>
</div>