@model List<ServiceVM>
@{
    ViewData["Title"] = "Services";
}

<div class="container my-3">
    <h2 class="text-center">Service</h2>
    <div class="create-btn">
        <a asp-action="Create" class="btn btn-success btn-rounded btn-fw">Create</a>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Image
                    </th>
                    <th>
                        Title
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Created Date
                    </th>
                    <th>
                        Options
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var service in Model)
                {
                    <tr class="parent">
                        <td>
                            <img src="~/assets/img/banner/@service.Image" alt="image" style="width:75px;height:75px;" />
                        </td>
                        <td>
                            @service.Title
                        </td>
                        <td>
                            @service.Description
                        </td>
                        <td>
                            @service.CreateDate
                        </td>
                        <td>
                            <a asp-action="Detail" asp-route-id="@service.Id" class="btn btn-primary btn-rounded btn-fw">Detail</a>
                            <a asp-action="Edit" asp-route-id="@service.Id" class="btn btn-warning btn-rounded btn-fw">Edit</a>
                            <button type="submit" data-id="@service.Id" id="delete" class="btn btn-danger btn-rounded btn-fw">Delete</button>
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
</div>

@section AdminScripts{
    <script src="~/admin/assets/js/service.js"></script>
}