@model BlogDetailVM
@{
    ViewData["Title"] = "Detail";
}

<div class="container my-3">
    <h1 class="text-center">Slider detail</h1>
    <div class="slider-detail">
        <h3>Images</h3>
        @foreach (var item in Model.BlogImages)
        {
            <img src="~/assets/img/blog/@item.Image" alt="image" style="width:500px;height:300px;" />
        }
        <h3 class="my-3">Title : @Model.Title</h3>
        <h3 class="my-3">Author : @Model.BlogAuthor</h3>
        <h3 class="my-3">Description : @Model.Description</h3>
        <h3 class="my-3">Create date : @Model.CreateDate</h3>
    </div>
    <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw">Back</a>

</div>