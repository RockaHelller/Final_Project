@model BlogAuthorCreateVM


<div class="container my-5">
    <div class="row">
        <form method="post" asp-action="Create" enctype="multipart/form-data">
            <input asp-for="FullName" class="form-control mt-3" placeholder="Enter Title" />
            <span asp-validation-for="FullName" class="text-danger d-block"></span>

            <input asp-for="Age" class="form-control mt-3" placeholder="Enter Age" />
            <span asp-validation-for="Age" class="text-danger d-block"></span>

            <input asp-for="Address" class="form-control mt-3" placeholder="Enter Address" />
            <span asp-validation-for="Address" class="text-danger d-block"></span>

            <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3 d-inline-block">Submit</button>
            <a asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3 d-inline-block">Back</a>
        </form>
    </div>
</div>