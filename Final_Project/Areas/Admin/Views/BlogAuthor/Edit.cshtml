@model BlogAuthorEditVM


<div class="container my-5">
    <div class="row">
        <form method="post" asp-action="Edit">
            <input type="text" asp-for=FullName class="form-control" />
            <span class="text-danger d-block" asp-validation-for=FullName></span>

            <input type="text" asp-for=Age class="form-control mt-3" />
            <span class="text-danger d-block" asp-validation-for=Age></span>

            <input type="text" asp-for=Address class="form-control mt-3" />
            <span class="text-danger d-block" asp-validation-for=Address></span>

            <button type="submit" class="btn btn-success btn-rounded btn-fw mt-3 d-inline-block">Submit</button>
            <a asp-controller="BlogAuthor" asp-action="Index" class="btn btn-primary btn-rounded btn-fw mt-3 d-inline-block">Back</a>
        </form>
    </div>
</div>